<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width">

		<title>{ifset title}{include title|stripHtml} | {/ifset}Nette Web</title>

		{control css}
		{control js}
	</head>

	<body>
		<div class="container login-container">
            <div class="row justify-content-center">
                <div class="col-md-6 login-form-1">
					<div n:foreach="$flashes as $flash" class="alert alert-{$flash->type}">
						{$flash->message}
					</div>
                    <h3>Přihlášení</h3>
                    {form signInForm}
						<div n:if="$form->ownErrors" n:foreach="$form->ownErrors as $error" class="alert alert-danger">
							{$error}
						</div>
                        <div class="form-group">
                            {input email placeholder => 'E-mail'}
                        </div>
                        <div class="form-group">
                            {input password placeholder => 'Heslo'}
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btnSubmit" value="Přihlásit se" />
                        </div>
                        {*<div class="form-group">
                            <a href="#" class="ForgetPwd" value="Login">Forget Password?</a>
                        </div>*}
                    {/form}
                </div>
            </div>
        </div>
	</body>
</html>
